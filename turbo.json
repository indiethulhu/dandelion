{
    "$schema": "https://turborepo.org/schema.json",
    "tasks": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": [
          "packages/**/dist/**",
          "packages/**/build/**",
          "packages/**/publish/**"
        ]
      },
      "dev": {
        "cache": false
      },
      "test": {
        "outputs": []
      }
    }
  }